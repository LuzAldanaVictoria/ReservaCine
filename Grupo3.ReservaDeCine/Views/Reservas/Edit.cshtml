@model Grupo3.ReservaDeCine.Models.Reserva

@{
    ViewData["Title"] = "Edit";
}

<h1>Reservas</h1>

<h4>Editar reserva</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="UsuarioId" class="control-label"></label>
                <select asp-for="UsuarioId" class="form-control" asp-items="ViewBag.TipoUsuarios" required></select>
                <span asp-validation-for="UsuarioId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FuncionId" class="control-label"></label>
                <select asp-for="FuncionId" class="form-control" asp-items="ViewBag.SelectPelicula" required></select>
                <span asp-validation-for="FuncionId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CantButacas" class="control-label"></label>
                <input asp-for="CantButacas" type="number" class="form-control" required/>
                <span asp-validation-for="CantButacas" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Volver a la lista</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
