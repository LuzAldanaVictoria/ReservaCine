@model Grupo3.ReservaDeCine.Models.Reserva

@{
    ViewData["Title"] = "Delete";
}

<h1>Reservas</h1>

<h3>¿Está seguro que desea eliminar esta reserva?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Usuario)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Usuario.Email)
        </dd>
        <dt class="col-sm-2">
            Película
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Funcion.Pelicula.Nombre)
        </dd>
        <dt class="col-sm-2">
            Fecha
        </dt>
        <dd class="col-sm-10">
            @Model.Funcion.Fecha.ToString("dd/MM/yyyy")
        </dd>
        <dt class="col-sm-2">
            Hora
        </dt>
        <dd class="col-sm-10">
            @Model.Funcion.Horario.ToString("HH:mm")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CantButacas)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CantButacas)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index">Volver a la lista</a>
    </form>
</div>
