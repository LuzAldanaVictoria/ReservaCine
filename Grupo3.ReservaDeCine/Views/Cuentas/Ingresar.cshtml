
@{
    ViewData["Title"] = "Ingresar";
}

<div class="text-center">
    <h1>Bienvenido</h1>
</div>

<hr />

<div class="login-container">
    <div class="col-lg-offset-4 col-md-4">
        <form method="post" asp-action="Ingresar">
            <input type="hidden" value="@ViewBag.ReturnUrl" name="returnUrl" />
            <div class="text-danger">
                @ViewBag.Error
            </div>
            <div class="container-content">
                <div class="form-group">
                    <label laber-for="username" class="control-label">Nombre de usuario:</label>
                    <input name="username" class="form-control" type="text" value="@ViewBag.Username" required autofocus />
                </div>
                <div class="form-group">
                    <label label-for="Password" class="control-label">Contraseña:</label>
                    <input name="password" class="form-control" type="password" required autofocus />
                </div>
                <div class="form-group">
                    <input type="submit" value="Ingresar" class="btn btn-lg btn-primary btn-block" />
                </div>
                <p text-align="center" class="text-whitesmoke">¿No tenés cuenta? Registrate</p>
                <div class="form-group">
                    <a class="btn btn-lg btn-primary btn-block" asp-area="" asp-controller="Cuentas" asp-action="Registrar">Registrarme ahora</a>
                </div>
            </div>
        </form>
    </div>
</div>
