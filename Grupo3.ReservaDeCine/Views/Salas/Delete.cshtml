@model Grupo3.ReservaDeCine.Models.Sala

@{
    ViewData["Title"] = "Eliminar";
}

<h3>Salas</h3>

<h3>¿Está seguro que desea eliminar esta sala?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Tipo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tipo.Nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CapacidadTotal)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CapacidadTotal)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" />
        <a asp-action="Index">Volver a la lista</a>
    </form>
</div>
