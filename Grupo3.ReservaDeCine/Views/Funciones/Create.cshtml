@model Grupo3.ReservaDeCine.Models.Funcion

@{
    ViewData["Title"] = "Create";
}

<h1>Crear</h1>

<h4>Función</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FechaHora" class="control-label"></label>
                <input asp-for="FechaHora" type="datetime-local" class="form-control" />
                <span asp-validation-for="FechaHora" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CantButacasDisponibles" class="control-label"></label>
                <input asp-for="CantButacasDisponibles" class="form-control" />
                <span asp-validation-for="CantButacasDisponibles" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
