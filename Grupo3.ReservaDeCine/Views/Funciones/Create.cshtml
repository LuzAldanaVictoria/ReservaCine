@model Grupo3.ReservaDeCine.Models.Funcion

@{
    ViewData["Title"] = "Crear";
}

<h1>Crear Función</h1>

@*<h4>Función</h4>*@
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Sala" class="control-label"></label>
                <input asp-for="Sala" class="form-control" />
                <span asp-validation-for="Sala" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pelicula" class="control-label"></label>
                <input asp-for="Pelicula" class="form-control" />
                <span asp-validation-for="Pelicula" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fecha" class="control-label"></label>
                <input asp-for="Fecha" type="date" class="form-control" />
                <span asp-validation-for="Fecha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Horario" class="control-label"></label>
                <input asp-for="Horario" type="time" class="form-control" />
                <span asp-validation-for="Horario" class="text-danger"></span>
            </div>
            @*<div class="form-group">
                <label asp-for="CantButacasDisponibles" class="control-label"></label>
                <input asp-for="CantButacasDisponibles" class="form-control" />
                <span asp-validation-for="CantButacasDisponibles" class="text-danger"></span>
            </div>*@
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
