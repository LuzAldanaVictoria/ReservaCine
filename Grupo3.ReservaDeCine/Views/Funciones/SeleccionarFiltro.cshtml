@model Grupo3.ReservaDeCine.Models.Funcion

@{
    ViewData["Title"] = "Seleccionar Filtro";
}

<h1>Seleccionar Filtro</h1>

<h4></h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SeleccionarFiltro">
            
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Fecha" class="control-label"></label>
                <input asp-for="Fecha" type="date"  class="form-control"name="dia"/>

            </div>
            <div class="form-group">
                <input type="submit" value="Buscar" class="btn btn-outline-secondary" asp-controller="Funciones" asp-action="FiltrarPorDia" asp-route-id="dia" />
            </div>
                   
            <div class="form-group">
                <label asp-for="PeliculaId" class="control-label"></label>
                <select asp-for="PeliculaId" class="form-control" asp-items="ViewBag.SelectPeliculas" name="PeliculaId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Buscar" class="btn btn-outline-secondary"  asp-controller="Funciones" asp-action="FiltrarPorPeliculaId" asp-route-id="PeliculaId"/>
            </div>
           
        </form>
    </div>
</div>

<div>
    <a asp-controller="Home" asp-action="Index">Volver al inicio</a>
</div>

